# WordPress Docker Configuration
# Copy this file to .env and fill in your values
# Or use: ./wp-docker-cli.sh init

# Site Configuration
SITE_NAME=wordpress
DOMAIN=example.com
DOCKER_IMAGE=ghcr.io/yourusername/wordpress-frankenphp:latest
GITHUB_USER=yourusername

# Database Configuration
DB_NAME=wordpress_db
DB_USER=wordpress_user
DB_PASSWORD=change_this_to_a_secure_password
DB_ROOT_PASSWORD=change_this_to_a_secure_root_password
DB_TABLE_PREFIX=wp_

# WordPress Security Keys
# Generate secure keys using: openssl rand -base64 64
WP_AUTH_KEY=change_this_to_a_secure_key
WP_SECURE_AUTH_KEY=change_this_to_a_secure_key
WP_LOGGED_IN_KEY=change_this_to_a_secure_key
WP_NONCE_KEY=change_this_to_a_secure_key
WP_AUTH_SALT=change_this_to_a_secure_salt
WP_SECURE_AUTH_SALT=change_this_to_a_secure_salt
WP_LOGGED_IN_SALT=change_this_to_a_secure_salt
WP_NONCE_SALT=change_this_to_a_secure_salt

# Cloudflare Tunnel Configuration
# Get this from your Cloudflare Zero Trust dashboard
TUNNEL_ID=your_tunnel_id_here
